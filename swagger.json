  "definitions": {
    "Admin": {
      "required": ["email", "_id"],
      "properties": {
        "name": {
          "type": "string",
          "required": "true"
        },
        "email": {
          "type": "string",
          "required": "true"
        },
        "password": {
          "type": "string",
          "required": "true"
        },
        "phonenumber": {
          "type": "string",
          "match": "/^[0-9]{10}$/"
        },
        "date": {
          "type": "Date",
          "default": "Date.now"
        }
      }
    },
    "User": {
      "required": ["email", "_id"],
      "properties": {
        "name": {
          "type": "String",
          "required": "true"
        },
        "email": {
          "type": "String",
          "required": "true"
        },
        "password": {
          "type": "String",
          "required": "true"
        },
        "phonenumber": {
          "type": "String",
          "match": "/^[0-9]{10}$/"
        }
      }
    },

    "Categories": {
      "properties": {
        "name": {
          "type": "String"
        },

        "product": {
          "type": "mongoose.Schema.Types.ObjectId",
          "$ref": "#/definitions/Product",
          "required": "true"
        }
      }
    },
    "Product": {
      "properties": {
        "name": { "type": "String", "required": "true" },
        "price": { "type": "Number", "required": "true" },
        "productImage": {
          "type": "String"
        }
      }
    },
    "Cart": {
      "properties": {
        "product": {
          "type": "mongoose.Schema.Types.ObjectId",
          "$ref": "#/definitions/Product",
          "required": "true"
        },

        "quantity": {
          "type": "Number",
          "default": "1"
        }
      }
    },
    "Users": {
      "type": "array",
      "$ref": "#/definitions/User"
    }
  }
